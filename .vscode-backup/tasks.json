{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sass: watch",
            "type": "shell",
            "command": "sass -r sass-globbing --watch src/sass/:public/css/",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "rake: run",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec",
                "rerun",
                "-b",
                "--ignore",
                "\"*.{slim,js,css}\"",
                "\"rackup --host 0.0.0.0\""
            ],
            "group": "build"
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "rackup",
            "group": "build"
        }
    ]
}